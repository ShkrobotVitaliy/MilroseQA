<apex:component controller="RFIComponentController">
  <apex:attribute name="recordId" description="Id of RFI Scope Record" type="String" required="true" assignTo="{!rfiScopeRecordId}"/>
  <apex:attribute name="projectView" description="Indicates that component is shown on Project page" type="Boolean" required="true" />
  <apex:attribute name="show2column" description="true/false - 2/3 column is shown" type="Boolean" required="false" />
  <apex:variable var="display2Column" value="{!IF(OR(projectView, AND(!projectView, show2column)), 'table-cell', 'none')}"/>
  <apex:variable var="display3Column" value="{!IF(OR(projectView, AND(!projectView, !show2column)), 'table-cell', 'none')}"/>
  <apex:variable var="colspanValue" value="{!IF(projectView, 2, 1)}"/>
  <apex:outputPanel layout="block">
    <table class="generalTableStyle" border="0" cellpadding="0" cellspacing="0">
      <colgroup width="34%"></colgroup>
      <colgroup width="{!IF(projectView, '33', '67')}%"></colgroup>
      <tr>
        <th class="component-name" colspan="{!IF(projectView, 3, 2)}">{!rfiScopeRecord.RFI_Section__c}:</th>
      </tr>
      <tr>
        <th style="width: 33%">Request</th>
        <th style="width: {!IF(projectView, '33', '50')}%; display:{!display2Column}">Application Permit Response</th>
        <th style="width: {!IF(projectView, '33', '50')}%; display:{!display3Column}">Application Sign Off Response</th>
      </tr>
      <tr>
        <td class="mainRequestHeader">Signing/Sealing &amp; License #</td>
        <td style="display:{!display2Column}" class="secondColumn"><apex:inputTextarea value="{!rfiScopeRecord.RFI_Scope_Description_CT__r.Signing_Sealing_License_App__c}" /></td>
        <td style="display:{!display3Column}" class="secondColumn"><apex:inputTextarea value="{!rfiScopeRecord.RFI_Scope_Description_CT__r.Signing_Sealing_License_Off__c}" /></td>
      </tr>
      <tr>
        <td class="mainRequestHeader">Project Manager</td>
        <td style="display:{!display2Column}" class="secondColumn"><apex:inputTextarea value="{!rfiScopeRecord.RFI_Scope_Description_CT__r.Project_Manager_App__c}" /></td>
        <td style="display:{!display3Column}" class="secondColumn"><apex:inputTextarea value="{!rfiScopeRecord.RFI_Scope_Description_CT__r.Project_Manager_Off__c}" /></td>
      </tr>
      <tr>
        <td class="mainRequestHeader">Description of work to be completed (Boiler, Burner or Fuel Storage etc.):</td>
        <td style="display:{!display2Column}" class="secondColumn"><apex:inputTextarea value="{!rfiScopeRecord.RFI_Scope_Description_CT__r.Description_Of_Work_To_Be_Completed_App__c}" /></td>
        <td style="display:{!display3Column}" class="secondColumn"><apex:inputTextarea value="{!rfiScopeRecord.RFI_Scope_Description_CT__r.Description_Of_Work_To_Be_Completed_Off__c}" /></td>
      </tr>
      <tr>
        <td class="mainRequestHeader">Number of boilers to be installed</td>
        <td style="display:{!display2Column}" class="secondColumn"><apex:inputTextarea value="{!rfiScopeRecord.RFI_Scope_Description_CT__r.Number_Of_Boilers_To_Be_Installed_App__c}" /></td>
        <td style="display:{!display3Column}" class="secondColumn"><apex:inputTextarea value="{!rfiScopeRecord.RFI_Scope_Description_CT__r.Number_Of_Boilers_To_Be_Installed_Off__c}" /></td>
      </tr>
      <tr>
        <td class="mainRequestHeader">If Modular, Number of Units</td>
        <td style="display:{!display2Column}" class="secondColumn"><apex:inputTextarea value="{!rfiScopeRecord.RFI_Scope_Description_CT__r.If_Modular_Number_Of_Units_App__c}" /></td>
        <td style="display:{!display3Column}" class="secondColumn"><apex:inputTextarea value="{!rfiScopeRecord.RFI_Scope_Description_CT__r.If_Modular_Number_Of_Units_Off__c}" /></td>
      </tr>
      <tr>
        <td class="mainRequestHeader">Operating Gauge Pressure</td>
        <td style="display:{!display2Column}" class="secondColumn"><apex:inputTextarea value="{!rfiScopeRecord.RFI_Scope_Description_CT__r.Operating_Gauge_Pressure_App__c}" /></td>
        <td style="display:{!display3Column}" class="secondColumn"><apex:inputTextarea value="{!rfiScopeRecord.RFI_Scope_Description_CT__r.Operating_Gauge_Pressure_Off__c}" /></td>
      </tr>
      <tr>
        <td class="mainRequestHeader">Pressure Setting of Relief Valves</td>
        <td style="display:{!display2Column}" class="secondColumn"><apex:inputTextarea value="{!rfiScopeRecord.RFI_Scope_Description_CT__r.Pressure_Setting_Of_Relief_Valves_App__c}" /></td>
        <td style="display:{!display3Column}" class="secondColumn"><apex:inputTextarea value="{!rfiScopeRecord.RFI_Scope_Description_CT__r.Pressure_Setting_Of_Relief_Valves_Off__c}" /></td>
      </tr>
      <tr>
